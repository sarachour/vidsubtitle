{
  "manifest_version": 2,

  "name": "Hidden Subtext",
  "description": "Request and view subtitles.",
  "version": "1.0",
  "icons": {
    "16":"icon.png",
    "48":"icon.png",
    "128":"icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ],
  "content_scripts": [
    {
      "matches": ["http://www.youtube.com/watch?*","https://www.youtube.com/watch?*"],
      "css": [],
      "js": ["lib/jquery.js", "inject.js"]
    }
  ]
}
